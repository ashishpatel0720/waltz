<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
                   logicalFilePath="db.changelog-1.19.xml">

    <changeSet author="alimuza"
               id="4294-20190828-1">
        <comment>4294: Event Definition</comment>
        <createTable tableName="event_definition"
                     remarks="Event Definition">
            <column name="id"
                    type="${id.type}"
                    autoIncrement="true">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="event_definition_pkey"/>
            </column>
            <column name="external_id"
                    type="${external-id.type}">
                <constraints nullable="false"
                             unique="true"/>
            </column>
            <column name="name"
                    type="${name.type}">
                <constraints nullable="true" />
            </column>
            <column name="description"
                    type="${description.type}">
                <constraints nullable="true"/>
            </column>
            <column name="event_type"
                    type="${enum.type}">
                <constraints nullable="false"/>
            </column>
            <column name="owner_entity_kind"
                    type="${enum.type}">
                <constraints nullable="false" />
            </column>
            <column name="owner_entity_id"
                    type="${id.type}">
                <constraints nullable="false" />
            </column>
            <column name="provenance"
                    type="${provenance.type}">
                <constraints nullable="false" />
            </column>
            <column name="last_observed_at"
                    type="TIMESTAMP">
                <constraints nullable="true" />
            </column>
            <column name="created_at"
                    type="TIMESTAMP"
                    defaultValueComputed="${now.value}">
                <constraints nullable="false"/>
            </column>
            <column name="created_by"
                    type="${name.type}">
                <constraints nullable="false" />
            </column>
            <column name="last_updated_at"
                    type="TIMESTAMP"
                    defaultValueComputed="${now.value}">
                <constraints nullable="false" />
            </column>
            <column name="last_updated_by"
                    type="${name.type}">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet author="alimuza"
               id="4294-20190822-2">
        <comment>4294: Event Relationship</comment>
        <createTable tableName="event_relationship"
                     remarks="Event Relationship">
            <column name="event_definition_id"
                    type="${id.type}">
                <constraints nullable="false"/>
            </column>
            <column name="entity_kind"
                    type="${enum.type}">
                <constraints nullable="false" />
            </column>
            <column name="entity_id"
                    type="${id.type}">
                <constraints nullable="false" />
            </column>
            <column name="created_at"
                    type="TIMESTAMP"
                    defaultValueComputed="${now.value}">
                <constraints nullable="false"/>
            </column>
            <column name="created_by"
                    type="${name.type}">
                <constraints nullable="false" />
            </column>
            <column name="provenance"
                    type="${provenance.type}">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>